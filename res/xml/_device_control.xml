<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="prefs_jf_appearance"
        android:title="@string/prefs_jf_appearance">

        <SwitchPreference
            android:key="prefs_jf_appearance_custom_animations"
            android:title="@string/prefs_jf_appearance_custom_animations_title"
            android:summaryOn="@string/prefs_jf_appearance_custom_animations_summary_on"
            android:summaryOff="@string/prefs_jf_appearance_custom_animations_summary_off"
            android:checked="true" />

        <ListPreference
            android:key="prefs_jf_appearance_custom_transformer"
            android:title="@string/prefs_jf_appearance_custom_transformer_title"
            android:summary="@string/prefs_jf_appearance_custom_transformer_summary"
            android:entries="@array/prefs_jf_appearance_custom_transformer_entries"
            android:entryValues="@array/prefs_jf_appearance_custom_transformer_values"
            android:defaultValue="0"
            android:dependency="prefs_jf_appearance_custom_transformer" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="prefs_set_on_boot"
        android:title="@string/prefs_set_on_boot">

        <CheckBoxPreference
            android:key="prefs_sob_vm"
            android:title="@string/section_title_tools_vm" />

        <CheckBoxPreference
            android:key="prefs_sob_sysctl"
            android:title="@string/section_title_tools_sysctl" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="prefs_jf_debug"
        android:title="@string/prefs_jf_debug">

        <SwitchPreference
            android:key="jf_extensive_logging"
            android:title="@string/jf_debug_extensive_logging_title"
            android:summaryOn="@string/jf_debug_extensive_logging_summary_on"
            android:summaryOff="@string/jf_debug_extensive_logging_summary_off" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="prefs_jf_extras"
        android:title="@string/prefs_jf_extras">

        <SwitchPreference
            android:key="jf_extras_launcher"
            android:title="@string/jf_extras_launcher_title"
            android:summaryOn="@string/jf_extras_launcher_summary_on"
            android:summaryOff="@string/jf_extras_launcher_summary_off" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="prefs_jf_support"
        android:title="@string/prefs_jf_support">

        <Preference
            android:key="prefs_help_dialog"
            android:title="@string/prefs_help_dialog_title" />

    </PreferenceCategory>

</PreferenceScreen>

