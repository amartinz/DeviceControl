<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeColor"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="org.namelessrom.devicecontrol.modules.appmanager.AppManagerActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/actionbar_toolbar" />

    <fragment
        android:name="org.namelessrom.devicecontrol.modules.appmanager.AppListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="AppListFragment"
        tools:layout="@layout/fragment_app_list" />

</LinearLayout>
