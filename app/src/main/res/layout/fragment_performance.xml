<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <org.namelessrom.devicecontrol.views.DeviceStatusView
            android:id="@+id/device_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space android:layout_width="match_parent" android:layout_height="10dp" />

        <org.namelessrom.devicecontrol.views.CpuStateView
            android:id="@+id/cpu_states"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</ScrollView>
