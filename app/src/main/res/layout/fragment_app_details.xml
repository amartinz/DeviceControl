<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context="org.namelessrom.devicecontrol.activities.AppDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <include
                android:id="@+id/item_app"
                layout="@layout/item_app" />

            <TextView
                android:id="@+id/app_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:textAlignment="center"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="right">

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/app_kill"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/kill_app" />

                <View style="@style/ButtonBarDivider" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/app_disabler"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <com.echo.holographlibrary.BarGraph
                android:id="@+id/app_cache_graph"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:barAxisColor="@android:color/transparent"
                app:barShowText="true"
                app:barShowAxis="true"
                app:barShowPopup="false" />

            <LinearLayout
                android:id="@+id/app_cache_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:animateLayoutChanges="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:orientation="horizontal"
                android:gravity="right">

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/app_data_clear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/clear_data" />

                <View style="@style/ButtonBarDivider" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/app_cache_clear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/clear_cache" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/app_space"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
